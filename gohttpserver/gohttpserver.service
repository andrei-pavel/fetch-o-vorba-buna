[Unit]
Description=gohttpserver
After=multi-user.target

[Service]
Restart=always
RestartSec=60
Type=idle
User=root
ExecStart=/usr/local/bin/gohttpserver --conf=/etc/fetch-radio-romania-actualitati-podcasts/gohttpserver/config.yaml
WorkingDirectory=/etc/fetch-radio-romania-actualitati-podcasts/gohttpserver

[Install]
WantedBy=multi-user.target
