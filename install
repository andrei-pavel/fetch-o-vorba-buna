#!/bin/bash

# Copyright (C) 2017-2018 Andrei Pavel, andrei.pavel@cti.pub.ro
# Licensed under the MIT License

# Header
ARGUMENTS="\
  [-p|--prefix] \$prefix        sets the \${pkgdir} used for AUR PKGBUILD
"
SCRIPT_PATH="$(dirname "$(readlink -f "${0}")")"
. "${SCRIPT_PATH}/lib/header"

# Parse arguments.
pkgdir=
while (( ${#} > 0 )); do
  case "${1}" in
  # [-p|--prefix] \$prefix        sets the \${pkgdir} used for AUR PKGBUILD
  '-p'|'--prefix') shift && pkgdir="${1}";;
  *)
    # Unrecognized argument
    printf "${RED}ERROR: Unrecognized argument '%s'${RESET}\\n" "${1}" 1>&2; print-usage; exit 1;;
  esac; shift
done

#------------------------------------------------------------------------------#

pushd "${SCRIPT_PATH}" > /dev/null
{
  for dependency in curl gohttpserver pup wget; do
    if ! command -v ${dependency} &> /dev/null; then
      printf 'Please install %s before continuing.\n' "${dependency}" >&2
      exit 1
    fi
  done

  mkdir -p '/etc/fetch-o-vorba-buna/gohttpserver'
  mkdir -p '/lib/systemd/system'
  mkdir -p '/usr/share/html'
  mkdir -p '/usr/share/o-vorba-buna'

  install './fetch-o-vorba-buna' "${pkgdir}/usr/local/bin"
  install './fetch-o-vorba-buna.service' "${pkgdir}/lib/systemd/system"
  install './gohttpserver/gohttpserver.service' "${pkgdir}/lib/systemd/system"
  if [[ ! -e '/usr/share/html/o-vorba-buna' ]]; then
    ln -s '/usr/share/o-vorba-buna' '/usr/share/html/o-vorba-buna'
  fi
  install -d './lib' "${pkgdir}/usr/local/bin/lib"
  cp -rf ./gohttpserver/* '/etc/fetch-o-vorba-buna/gohttpserver'
  install ./lib/* "${pkgdir}/usr/local/bin/lib"

  if command -v systemctl &> /dev/null; then
    systemctl daemon-reload
    systemctl enable fetch-o-vorba-buna
    systemctl restart fetch-o-vorba-buna
    systemctl enable gohttpserver
    systemctl restart gohttpserver
  elif command -v service &> /dev/null; then
    service fetch-o-vorba-buna enable
    service fetch-o-vorba-buna restart
    service gohttpserver enable
    service gohttpserver restart
  else
    printf 'Service not installed because neither systemd nor SysV-Init is not installed.' &> 2
  fi
}
popd 1> /dev/null
