http://radio-romania-actualitati.ro {
  redir https://{host}{uri}
}

https://radio-romania-actualitati.ro {
    file_server browse

    root * /usr/share/radio-romania-actualitati-podcasts

    tls /etc/letsencrypt/live/radio-romania-actualitati.ro/cert.pem /etc/letsencrypt/live/radio-romania-actualitati.ro/privkey.pem
}
